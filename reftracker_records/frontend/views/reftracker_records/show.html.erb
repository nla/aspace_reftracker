<%= setup_context(:title => I18n.t("plugins.reftracker_records.search_reftracker"), :controller => :reftracker_records) %>

<div class="row-fluid">
 <div class="span12">
  <div class="record-pane">
   
   <h2><%= I18n.t("plugins.reftracker_records.list_reftracker") %></h2>

   <table class="table table-hover table-striped">
    <thead>
     <tr>
      <th>Reftracker Field Name</th>
      <th>ArchivesSpace Field Name</th>
      <th>Value</th>    
     </tr>
    </thead>
    <tbody>
     <% @ref_as_map[1].each.with_index do |name, index|  unless name.nil? %>                    
      <tr>
       <td><%= name %></td>
       <td><%= @ref_as_map[0][index] %></td>
       <td><%= @reftracker_record[@ref_as_map[2][index]] %></td>
      </tr>
      <% end %>
     <% end %>
    </tbody>
   </table>  

   <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <%= form_for(:ref_record, url: { :controller => :reftracker_records, :action => :import}) do |f| %>
      <%= f.hidden_field :data, :value => @reftracker_record %> 
      <%= f.submit "Import", class: "btn btn-primary" %>
    <% end %>
    &nbsp;
    <%= button_to "Cancel", { :controller => :reftracker_records, :action => :cancel }, :class => "btn btn-primary", :id => "cancel", :method => :get %>
    </div>
   </div>

  </div> 
 </div> 
</div>